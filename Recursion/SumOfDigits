public class  SumOfDigits{
    public static int sumofDigits(int n) {
    if(n==0){
        return 0;
    }else{
        return (n%10)+ sumofDigits(n/10);
    }

    }
    public static void main(String[] args) {

        int number = 123;
        
        System.out.println(sumofDigits(number));           
    }
}
